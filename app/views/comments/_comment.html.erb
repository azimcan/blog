<div id="<%= dom_id(comment) %>" class="bg-opacity-10 bg-gray-900 rounded-2xl px-5">
  
  <div class="my-5">
    <p class="py-2">
      <%= comment.content %>    
    </p>

    <div class="my-5 py-2  text-gray-400 text-xs grid grid-cols-2 grid-rows-1">
      <div class="flex justify-start">
        <%= comment.user.nil? ? "Anonymous" : comment.user.email[0..3] + "..."%>
      </div>
      <div class="flex justify-end">
        <%= time_tag comment.created_at, "data-local": "time-ago" %>
      </div>
    </div>
  </div>

</div>