<header class="container mx-auto px-24 sticky top-0 z-40">
  <div class="flex justify-between items-center mb-8 px-8 py-4 bg-white rounded-b-lg shadow-2xl">
    
    <h1 class="font-bold text-4xl">
      <%= link_to "Posts", root_path %>
      <span class="text-red-500">
        <%= @posts.size if action_name == "index" %>
      </span>
    </h1>

    <% if signed_in? %>
      <div class="inline-flex">

        <%= link_to "New post", new_post_path, class: "group-button py-2 bg-blue-500 rounded-l-lg" %>
        <%= link_to "Profile", profile_path(current_user.username), class: "group-button py-2 bg-yellow-500" %>
        <%= link_to "#{current_user.email[0..3]}... logout", logout_path, data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class: "group-button py-2 bg-red-500 rounded-r-lg" %>
      </div>
    <% else %>
      <%= link_to "Login", login_path, class: "group-button py-2 bg-green-500 rounded-lg" %>
    <% end %>


  </div>
</header> 
