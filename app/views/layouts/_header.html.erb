<header class="container mx-auto px-24 sticky top-0 z-40">
  <div class="flex justify-between items-center mb-8 px-8 py-4 bg-white rounded-b-lg shadow-2xl">
    
    <h1 class="font-bold text-4xl">
      <%= link_to "Posts", root_path %>
      <span class="text-red-500">
        <%= @post_count if action_name == "index" && controller_name == "posts" %>
      </span>
    </h1>

    <% if signed_in? %>
      <div class="inline-flex">
        <%= render 'layouts/components/group_button', { value: "New post", href: new_post_path, class: "group-button py-2 bg-blue-500" } %>

        <%= render 'layouts/components/group_button', { value: "Profile", href: (profile_path(current_user.username) unless current_user.username.nil?), class: 'py-2 bg-yellow-500' }%>

        <%= render 'layouts/components/group_button', { value: "#{current_user.email[0..3]}... logout", href: logout_path, data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class: 'py-2 bg-red-500 rounded-r-lg' }%>
      </div>
    <% else %>
      <div class="inline-flex">
        <%= render 'layouts/components/group_button', { value: "Register", href: new_user_path, class: 'py-2 bg-blue-500' }%>

        <%= render 'layouts/components/group_button', { value: "Login", href: login_path, class: 'bg-green-500' }%>
      </div>
    <% end %>


  </div>
</header> 
