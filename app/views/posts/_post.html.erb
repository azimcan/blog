<div id="<%= dom_id post %>" class="shadow-2xl p-4 mb-8 rounded-lg bg-white">
  <% if action_name != "show" %>
    <div class="flex justify-end">
      <%= link_to (heroicon "zoom-in"), post, class: "button ml-2" %>
      <%= link_to (heroicon "pencil-alt"), edit_post_path(post), class: "button ml-2" %>
    </div>
  <% else %>
    <div class="grid grid-rows-1 grid-cols-2">
      <div class="flex justify-start">
        <%= link_to (heroicon "arrow-left"), posts_path, class: "button ml-2" %>
      </div>

      <div class="flex justify-end">
        <div class="inline-flex">
          <%= link_to (heroicon "pencil-alt"), edit_post_path(@post), class: "button ml-2" %>
          <%= button_to (heroicon "trash"), post_path(@post), method: :delete, class: "button ml-2" %>
        </div>
      </div>
    </div>
  <% end %>

  

  <div class="my-5">
    <div id="header" class="relative flex items-center">
      <h1 class="font-bold text-4xl">
        <%= post.title %>
      </h1>
      <!-- TODO -->
      <span class="absolute right-0 px-2 text-xs rounded-2xl shadow-2xl bg-red-300 <%= post.status %>">
        <%= post.status.capitalize %>
      </span>
    </div>
  </div>

  <div class="my-5">
    <%= post.body %>
  </div>

</div>

