<div id="<%= dom_id post %>">
  <div class="shadow-2xl py-4 px-8 mb-8 rounded-lg bg-white">
    
    <div class="my-5">
      <div id="header" class="relative flex items-center">
        <h1 class="font-bold text-4xl">
          <%= link_to post.title, post_path(post.id), class: "hover:text-gray-700" %>
        </h1>
        <div class="absolute right-0">
          <% if post.user.nil? %>
            <span class="px-2 mr-2 text-xs rounded-2xl shadow-2xl text-white font-bold bg-gray-900">nil</span>
          <% else %>
            <%= link_to post.user.email, profile_path(post.user.email), class: "px-2 mr-2 text-xs rounded-2xl shadow-2xl text-white font-bold bg-gray-900" %>
          <% end %>

          <!-- TODO -->
          <%= render 'layouts/components/badge', { value: post.status.capitalize, class: '', status: "#{post.status}" } %>

        </div>
      </div>
    </div>

    <div class="my-5">
      <%= post.body %>
    </div>

    <div class="my-5 py-2  text-gray-400 text-xs grid grid-cols-2 grid-rows-1">
      <div class="flex justify-start">
        <%= pluralize post.comments.count, "comment"%>
      </div>
      <div class="flex justify-end">
        <%= time_tag post.created_at, "data-local": "time-ago" %>
      </div>
    </div>
  </div>
  
</div>
