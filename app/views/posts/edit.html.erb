<div class="mx-auto w-full my-auto shadow-2xl p-8 bg-white rounded-lg">

  <div class="grid grid-rows-1 grid-cols-2">
    <div class="flex justify-start">
      <%= link_to (heroicon "arrow-left"), posts_path, class: "button ml-2" %>
    </div>

    <div class="flex justify-end">
      <%= link_to (heroicon "zoom-in"), @post, class: "button ml-2" %>
    </div>
  </div>

  <h1 class="font-bold text-4xl mt-4 flex justify-center">Editing post</h1>
  
  <%= render "form", post: @post %>

</div>
