<div class="w-full">
  <% if notice.present? %>
  <div class="flex justify-center">
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block shadow-2xl" id="notice"><%= notice %></p>    
  </div>
  <% end %>

  <div class="flex justify-between items-center mb-8 px-8 py-4 bg-white rounded-lg shadow-2xl">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to 'New post', new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-500 text-white block font-medium shadow-2xl" %>
  </div>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
